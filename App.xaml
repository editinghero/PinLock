<Application x:Class="PinLock.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Global Dark Theme Resources -->
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
    </Application.Resources>
</Application>